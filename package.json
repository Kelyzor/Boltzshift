{
  "devDependencies": {
    "autoprefixer": "^10.4.21",
    "postcss": "^8.5.3",
    "prettier": "^3.5.3",
    "prettier-plugin-tailwindcss": "^0.6.11",
    "tailwindcss": "^4.0.15"
  },
  "scripts": {
    "dev": "NODE_ENV=production npx tailwindcss -i ./src/styles.css -o ./docs/styles.css --watch --minify",
    "prettier": "npx prettier --write docs/index.html"
  },
  "dependencies": {
    "@tailwindcss/cli": "^4.0.15",
    "@tailwindcss/postcss": "^4.0.15"
  },
  "prettier": {
    "plugins": [
      "prettier-plugin-tailwindcss"
    ],
    "singleQuote": true,
    "trailingComma": "all",
    "tailwindStylesheet": "/src/styles.css"
  }
}
